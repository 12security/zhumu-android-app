<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
            <solid android:color="@color/zm_highlight_pressed"/>
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@color/zm_highlight">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
            <solid android:color="@color/zm_highlight"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
            <solid android:color="@color/zm_white"/>
        </shape>
    </item>
</selector>
