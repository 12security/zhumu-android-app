<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llRecordStatus" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/zm_btn_round_dark" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="26dp" android:layout_marginRight="@dimen/zm_setting_item_padding_right" android:layout_weight="3">
        <ImageView android:id="@+id/imgRecording" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_ic_cmr_recording"/>
        <ProgressBar android:layout_gravity="center_vertical" android:id="@+id/progressStartingRecord" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:layout_marginBottom="4dp" style="@style/ZMProgressBar.Small"/>
        <TextView android:id="@+id/txtRecordStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_record_status_recording" style="@style/ZMTextView.Normal.OnDark"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/zm_setting_item_padding_left" android:layout_weight="2">
        <ImageView android:id="@+id/btn_pause_record" android:background="@null" android:padding="8dp" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_btn_record_pause" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="@string/zm_record_btn_pause"/>
        <ImageView android:id="@+id/btn_stop_record" android:background="@null" android:padding="8dp" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_btn_record_stop" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/zm_record_btn_stop_record"/>
    </RelativeLayout>
</LinearLayout>
