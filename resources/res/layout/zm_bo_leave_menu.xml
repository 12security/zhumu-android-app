<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:background="#f4f5f5" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:background="@drawable/zm_list_divider" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/panelLeaveBOPrompt" android:paddingLeft="20dp" android:paddingTop="20dp" android:paddingRight="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/zm_bo_lbl_leave_bo" style="@style/ZMTextView.Medium.Dimmed"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/panelLeaveBO" android:background="@drawable/zm_btn_dialog_bg" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:background="@drawable/zm_list_divider" android:layout_width="match_parent" android:layout_height="1dp"/>
            <TextView android:gravity="center" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="46dp" android:text="@string/zm_bo_btn_leave_bo" style="@style/ZMTextView.DialogItem"/>
            <ImageView android:background="@drawable/zm_list_divider" android:layout_width="match_parent" android:layout_height="1dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/panelEndAllBO" android:background="@drawable/zm_btn_dialog_bg" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="46dp" android:text="@string/zm_bo_btn_end_all_bo" style="@style/ZMTextView.DialogItem"/>
            <ImageView android:background="@drawable/zm_list_divider" android:layout_width="match_parent" android:layout_height="1dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/panelLeaveMeeting" android:background="@drawable/zm_btn_dialog_highlight_bg" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@+id/txtLeaveMeeting" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="46dp" android:text="@string/zm_bo_btn_leave_meeting" style="@style/ZMTextView.DialogItem.highligt"/>
            <ImageView android:background="@drawable/zm_list_divider" android:layout_width="match_parent" android:layout_height="1dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/panelEndMeeting" android:background="@drawable/zm_btn_dialog_highlight_bg" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@+id/txtEndMeeting" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="46dp" android:text="@string/zm_bo_btn_end_meeting" style="@style/ZMTextView.DialogItem.highligt"/>
            <ImageView android:background="@drawable/zm_list_divider" android:layout_width="match_parent" android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
