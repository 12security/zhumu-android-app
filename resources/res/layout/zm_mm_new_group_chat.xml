<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout android:id="@+id/panelTitleBar" android:layout_width="match_parent" android:layout_height="wrap_content" xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:zm_leftButton="@+id/btnCancel" xmlns:ns2="http://schemas.android.com/apk/res-auto" ns2:zm_rightButton="@+id/btnNext" xmlns:ns3="http://schemas.android.com/apk/res-auto" ns3:zm_title="@+id/txtTitle" style="@style/ZMTitleBar">
        <Button android:id="@+id/btnCancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_btn_cancel" style="@style/ZMButton.TitleBar"/>
        <Button android:id="@+id/btnNext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_btn_next" style="@style/ZMButton.TitleBar"/>
        <us.zoom.androidlib.widget.ZMDynTextSizeTextView android:ellipsize="end" android:gravity="center" android:id="@+id/txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_btn_new_group" android:singleLine="true" style="@style/ZMTextView.Title"/>
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@+id/txtInstructions" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/zm_msg_new_group_chat_instructions" style="@style/ZMTextView.Instructions"/>
        <us.zoom.androidlib.widget.ZMSettingsCategory android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="35dp">
            <LinearLayout android:gravity="center_vertical" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:gravity="center" android:id="@+id/edtSubject" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/zm_hint_group_chat_subject" android:singleLine="true" android:maxLength="@integer/zm_group_chat_topic_max_length" android:inputType="textCapWords" style="@style/ZMEditText.SettingsItem">
                    <requestFocus/>
                </EditText>
            </LinearLayout>
        </us.zoom.androidlib.widget.ZMSettingsCategory>
        <TextView android:gravity="center" android:id="@+id/txtCharatersLeft" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="5 characters left" style="@style/ZMTextView.Small.Dimmed"/>
    </LinearLayout>
</LinearLayout>
