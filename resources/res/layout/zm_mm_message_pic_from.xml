<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/panelMsgLayout" android:paddingLeft="8dp" android:paddingTop="6dp" android:paddingRight="8dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.zipow.videobox.view.AvatarView android:layout_gravity="top" android:id="@+id/avatarView" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginRight="5dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@+id/txtScreenName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Reed Yang" style="@style/ZMTextView.ExSmall.Dimmed"/>
        <com.zipow.videobox.view.ZMGifView android:id="@+id/imgPic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/zm_image_placeholder" android:scaleType="fitXY" android:adjustViewBounds="true" android:maxWidth="300dp" android:maxHeight="300dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/panelProgress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp">
            <ProgressBar android:id="@+id/progressBarDownload" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="30dp" style="@style/ZMProgressBar.Small"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/imgStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:src="@drawable/zm_mm_msg_state_fail" android:contentDescription="@string/zm_description_mm_msg_failed"/>
</LinearLayout>
