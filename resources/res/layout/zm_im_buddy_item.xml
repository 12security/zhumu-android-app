        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/imgPresence" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:src="@drawable/zm_status_available"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
