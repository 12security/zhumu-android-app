<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="horizontal" android:background="@color/zm_transparent" android:paddingLeft="16dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/panelContent" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="240dp" android:layout_height="wrap_content">
        <TextView android:id="@+id/txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_msg_conf_waiting_to_invite_title" style="@style/ZMTextView.TipMessage.Title.Medium.OnDark"/>
        <TextView android:textSize="14sp" android:id="@+id/txtMessage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_msg_conf_waiting_to_invite" style="@style/ZMTextView.TipMessage.OnDark"/>
    </LinearLayout>
    <TextView android:gravity="center" android:id="@+id/txtButton" android:focusable="true" android:layout_width="48dp" android:layout_height="match_parent" android:text="@string/zm_btn_ok" style="@style/ZMTextView.TipMessage.Button"/>
</LinearLayout>
