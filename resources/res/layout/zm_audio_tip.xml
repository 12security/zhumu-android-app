        <ProgressBar android:id="@+id/progressCallVoIP" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="10dp" style="@style/ZMProgressBar.Small"/>
    </LinearLayout>
    <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/btnDialIn" android:background="@drawable/zm_settings_item_selector" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/zm_btn_dial_in" style="@style/ZMTextView.SettingsItem"/>
