        <TextView android:gravity="left" android:focusable="false" android:clickable="false" android:duplicateParentState="true" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/zm_btn_switch_audio_source" android:layout_weight="1" style="@style/ZMTextView.SettingsItem"/>
    </LinearLayout>
    <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/btnMutePhone" android:background="@drawable/zm_settings_item_selector" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:text="@string/zm_btn_mute_phone" style="@style/ZMTextView.SettingsItem"/>
