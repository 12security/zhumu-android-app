<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/panelTitleBar" android:layout_width="match_parent" android:layout_height="@dimen/zm_pt_titlebar_height" style="@style/ZMTitleBar">
        <Button android:id="@+id/btnBack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_btn_back" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/ZMBackButton"/>
        <TextView android:gravity="center_horizontal" android:id="@+id/txtTitle" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_title_feedback" android:layout_centerHorizontal="true" android:layout_centerVertical="true" style="@style/ZMTextView.Title"/>
    </RelativeLayout>
    <ScrollView android:id="@+id/panelOptions" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/panelSendFeedback" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/txtWelcome" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_msg_feedback_welcome" style="@style/ZMTextView.Medium.OnLight"/>
                <EditText android:gravity="top" android:id="@+id/edtFeedback" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:inputType="textMultiLine"/>
                <Button android:id="@+id/btnSend" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:text="@string/zm_btn_send" style="@style/ZMButton.HappyPath"/>
            </LinearLayout>
            <TextView android:id="@+id/txtSending" android:background="@drawable/zm_note_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_msg_sending_feedback" android:layout_weight="1" style="@style/ZMTextView.Medium.OnLight"/>
            <TextView android:id="@+id/txtSentFailed" android:background="@drawable/zm_note_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_msg_sent_feedback_failed" android:layout_weight="1" style="@style/ZMTextView.Medium.OnLight"/>
            <TextView android:id="@+id/txtThanks" android:background="@drawable/zm_note_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_msg_thanks_for_feedback" android:layout_weight="1" style="@style/ZMTextView.Medium.OnLight"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
