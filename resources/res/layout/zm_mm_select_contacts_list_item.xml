<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <CheckedTextView android:gravity="center_vertical" android:id="@+id/check" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>
        <ProgressBar android:gravity="center_vertical" android:id="@+id/progressBarLoading" android:focusable="false" android:visibility="invisible" android:layout_width="24dp" android:layout_height="24dp" style="@style/ZMProgressBar.Small"/>
    </FrameLayout>
    <com.zipow.videobox.view.AvatarView android:id="@+id/avatarView" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginLeft="10dp" android:layout_marginTop="0dp" android:layout_marginRight="10dp" android:layout_marginBottom="0dp" xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:zm_description_enable="false"/>
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:ellipsize="end" android:id="@+id/txtScreenName" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Reed Yang" android:maxLines="2" android:layout_weight="1" style="@style/ZMTextView.BuddyName.Medium.OnLight"/>
            <TextView android:textColor="@color/zm_mm_presence_offline" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txtContactsDescrption" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" style="@style/ZMTextView.Small"/>
            <com.zipow.videobox.view.PresenceStateView android:id="@+id/presenceStateView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" xmlns:ns2="http://schemas.android.com/apk/res-auto" ns2:zm_subpresence_type="0"/>
        </LinearLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="test@example.com" android:singleLine="true" style="@style/ZMTextView.Normal.Dimmed"/>
    </LinearLayout>
</LinearLayout>
