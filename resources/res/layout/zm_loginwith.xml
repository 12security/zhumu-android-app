<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/viewLogin" android:background="@drawable/zm_window_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="500dp">
    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout android:id="@+id/panelTitleBar" android:layout_width="match_parent" android:layout_height="wrap_content" xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:zm_leftButton="@+id/btnBack" xmlns:ns2="http://schemas.android.com/apk/res-auto" ns2:zm_rightButton="@+id/btnSignup" xmlns:ns3="http://schemas.android.com/apk/res-auto" ns3:zm_title="@+id/txtTitle" style="@style/ZMTitleBar">
        <Button android:id="@+id/btnBack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:contentDescription="@string/zm_btn_back" style="@style/ZMBackButton"/>
        <Button android:id="@+id/btnSignup" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_btn_signup" style="@style/ZMButton.TitleBar"/>
        <TextView android:id="@+id/txtTitle" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_title_login" style="@style/ZMTextView.Title"/>
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:paddingLeft="0dp" android:paddingTop="@dimen/zm_setting_item_group_spacing" android:paddingRight="0dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <us.zoom.androidlib.widget.ZMSettingsCategory android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:gravity="center" android:id="@+id/edtUserName" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/zm_hint_zoom_account" android:maxLength="128" android:layout_weight="1" android:inputType="textEmailAddress" style="@style/ZMEditText.SettingsItem"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:gravity="center" android:id="@+id/edtPassword" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/zm_hint_zoom_pwd" android:selectAllOnFocus="true" android:maxLength="32" android:layout_weight="1" android:inputType="textPassword" android:contentDescription="@string/zm_hint_zoom_pwd" style="@style/ZMEditText.SettingsItem"/>
                </LinearLayout>
            </us.zoom.androidlib.widget.ZMSettingsCategory>
            <TextView android:id="@+id/txtAutoLogoffWarn" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" style="@style/ZMTextView.Small.Warn"/>
            <LinearLayout android:orientation="horizontal" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <Button android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/btnVerifyCodeLogin" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@style/ZMButton.NoBackground.Small"/>
                <Button android:textColor="@color/zm_text_dim" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/linkForgetPassword" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/zm_lbl_forget_password" android:layout_weight="1" style="@style/ZMButton.NoBackground.Small"/>
            </LinearLayout>
            <Button android:id="@+id/btnLoginZoom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="@string/zm_btn_login" style="@style/ZMButton.HappyPath"/>
            <TextView android:textSize="12sp" android:textColor="@color/zm_text_dim" android:gravity="center" android:id="@+id/tvAgreement" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="20dp"/>
            <us.zoom.androidlib.widget.ZMSettingsCategory android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/panelActions" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/btnLoginGoogle" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_ic_other_contacts_google"/>
                    <TextView android:gravity="left" android:paddingLeft="15dp" android:paddingRight="15dp" android:focusable="false" android:clickable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/zm_login_with_google" android:layout_weight="1" style="@style/ZMTextView.SettingsItem"/>
                    <ImageView android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_next_arrow"/>
                </LinearLayout>
                <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/btnLoginFacebook" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_ic_other_contacts_fb"/>
                    <TextView android:gravity="left" android:background="@null" android:paddingLeft="15dp" android:paddingRight="15dp" android:focusable="false" android:clickable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/zm_login_with_facebook" android:layout_weight="1" style="@style/ZMTextView.SettingsItem"/>
                    <ImageView android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_next_arrow"/>
                </LinearLayout>
                <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/linkSSOLogin" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_icon_sso"/>
                    <TextView android:gravity="left" android:background="@null" android:paddingLeft="15dp" android:paddingRight="15dp" android:focusable="false" android:clickable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/zm_login_with_sso" android:layout_weight="1" style="@style/ZMTextView.SettingsItem"/>
                    <ImageView android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_next_arrow"/>
                </LinearLayout>
            </us.zoom.androidlib.widget.ZMSettingsCategory>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
