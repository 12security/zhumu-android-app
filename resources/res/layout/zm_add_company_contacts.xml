<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout android:id="@+id/panelTitleBar" android:layout_width="match_parent" android:layout_height="wrap_content" xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:zm_leftButton="@+id/btnBack" xmlns:ns2="http://schemas.android.com/apk/res-auto" ns2:zm_rightButton="@+id/btnInvite" xmlns:ns3="http://schemas.android.com/apk/res-auto" ns3:zm_title="@+id/txtTitle" style="@style/ZMTitleBar">
        <Button android:id="@+id/btnBack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_btn_back" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/ZMBackButton"/>
        <Button android:id="@+id/btnInvite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_btn_done" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/ZMButton.TitleBar"/>
        <us.zoom.androidlib.widget.ZMDynTextSizeTextView android:gravity="center_horizontal" android:id="@+id/txtTitle" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_title_add_favorite" android:layout_centerHorizontal="true" android:layout_centerVertical="true" style="@style/ZMTextView.Title"/>
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/panelSelected" android:background="#f0f0f0" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <us.zoom.androidlib.widget.ZMHorizontalListView android:id="@+id/listSelected" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginLeft="2dp" android:layout_marginRight="5dp" android:layout_weight="1"/>
        <TextView android:id="@+id/txtSelectionCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5" style="@style/ZMTextView.Large.OnLight"/>
    </LinearLayout>
    <TextView android:gravity="center" android:id="@+id/txtInstructions" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/zm_msg_select_people_to_add_to_contacts_instructions" style="@style/ZMTextView.Instructions"/>
    <View android:background="@drawable/zm_list_divider" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:id="@+id/panelSearch" android:layout_width="match_parent" android:layout_height="35dp">
        <EditText android:id="@+id/edtSearch" android:background="@drawable/zm_search_bg_normal" android:layout_width="0dp" android:layout_height="match_parent" android:hint="@string/zm_hint_search" android:singleLine="true" android:layout_toLeftOf="@+id/panelBtnSearch" android:layout_alignParentLeft="true" android:layout_alignWithParentIfMissing="true" android:imeOptions="actionSearch"/>
        <Button android:id="@+id/btnClearSearchView" android:background="@drawable/zm_btn_clear_search_view" android:layout_width="35dp" android:layout_height="35dp" android:layout_toLeftOf="@+id/panelBtnSearch" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true" android:contentDescription="@string/zm_description_mm_btn_clear_search"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/panelBtnSearch" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
            <Button android:id="@+id/btnSearch" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_marginRight="3dp" android:text="@string/zm_btn_search" android:layout_weight="1" style="@style/ZMButton.TitleBar"/>
            <View android:background="@drawable/zm_list_divider" android:layout_width="match_parent" android:layout_height="1px"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.zipow.videobox.view.mm.AddCompanyContactsListView android:id="@+id/buddyListView" android:background="@drawable/zm_listview_bg" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/panelLoading" android:background="@drawable/zm_loading_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ProgressBar android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" style="@style/ZMProgressBar.Small"/>
            <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_msg_waiting_search_domain_user" style="@style/ZMTextView.Medium.OnDark"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
