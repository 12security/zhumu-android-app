<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/txtAnswer" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Answer content" android:layout_weight="1" style="@style/ZMTextView.Small.OnLight"/>
        <TextView android:layout_gravity="bottom" android:id="@+id/txtSelectedCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="(2)" style="@style/ZMTextView.Normal.Dimmed"/>
        <TextView android:layout_gravity="bottom" android:id="@+id/txtPercent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="50%" style="@style/ZMTextView.Normal.OnLight"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/percent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:progress="30" android:secondaryProgress="70" style="@style/PollingPercentBar"/>
</LinearLayout>
