<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
    <ImageView android:id="@+id/imgAttention" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/zm_ic_distract"/>
    <com.zipow.videobox.view.AvatarView android:id="@+id/avatarView" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="1dp" android:layout_marginRight="10dp" android:layout_marginBottom="1dp" xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:zm_description_enable="false"/>
    <com.zipow.videobox.view.PListNameRoleLayout android:orientation="horizontal" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:ellipsize="end" android:id="@+id/txtScreenName" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Very very long long long" android:singleLine="true" style="@style/ZMTextView.BuddyName.Medium.OnLight"/>
        <TextView android:id="@+id/txtRole" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(host, me)" android:singleLine="true" style="@style/ZMTextView.Small.Dimmed"/>
    </com.zipow.videobox.view.PListNameRoleLayout>
    <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:paddingRight="0dp" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:gravity="center" android:id="@+id/txtUnreadMessageCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="9+" style="@style/ZMTextView.UnreadMessageCount"/>
        <ImageView android:id="@+id/imgCc" android:padding="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_cc"/>
        <ImageView android:id="@+id/imgRecording" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_ic_local_recording"/>
        <ImageView android:id="@+id/imgCMRRecording" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_ic_cmr"/>
        <ImageView android:id="@+id/imgRaiseHand" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_ic_raise_hand"/>
        <ImageView android:id="@+id/imgPureAudio" android:padding="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_btn_voice"/>
        <ImageView android:id="@+id/imgVideo" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_video_on"/>
        <ImageView android:id="@+id/imgAudio" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_audio_on"/>
        <ImageView android:id="@+id/imgArrow" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_next_arrow"/>
    </LinearLayout>
</LinearLayout>
