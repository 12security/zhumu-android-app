<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/panelMsgLayout" android:paddingLeft="8dp" android:paddingTop="6dp" android:paddingRight="8dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/imgStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/zm_mm_msg_state_fail" android:contentDescription="@string/zm_description_mm_msg_failed"/>
    <ProgressBar android:id="@+id/progressBar1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" style="@style/ZMProgressBar.Small"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <com.zipow.videobox.view.ZMGifView android:id="@+id/imgPic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_image_placeholder" android:scaleType="fitXY" android:adjustViewBounds="true" android:maxWidth="150dp" android:maxHeight="300dp"/>
        <TextView android:id="@+id/txtRatio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@style/ZMTextView.Medium.OnDark"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/panelProgress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp">
        <ProgressBar android:id="@+id/progressBarDownload" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="30dp" style="@style/ZMProgressBar.Small"/>
    </LinearLayout>
    <com.zipow.videobox.view.AvatarView android:layout_gravity="top" android:id="@+id/avatarView" android:layout_width="35dp" android:layout_height="35dp"/>
</LinearLayout>
