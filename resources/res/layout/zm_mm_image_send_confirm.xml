<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <us.zoom.androidlib.widget.TouchImageView android:id="@+id/viewImage" android:background="@color/zm_black" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.zipow.videobox.view.ZMGifView android:id="@+id/viewGif" android:background="@color/zm_black" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/viewPlaceHolder" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zm_image_placeholder"/>
        <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/zm_mm_msg_load_image_failed" style="@style/ZMTextView.Normal.Dimmed"/>
    </LinearLayout>
    <ProgressBar android:layout_gravity="center" android:id="@+id/progressBar1" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/ZMProgressBar"/>
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="bottom" android:orientation="horizontal" android:background="#33000000" android:paddingLeft="20dp" android:paddingTop="2dp" android:paddingRight="20dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="@dimen/zm_pt_titlebar_height">
        <Button android:id="@+id/btnBack" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/zm_btn_cancel" style="@style/ZMButton.TitleBar"/>
        <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        <Button android:id="@+id/btnSend" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/zm_mm_btn_use_photo" style="@style/ZMButton.TitleBar"/>
    </LinearLayout>
</FrameLayout>
