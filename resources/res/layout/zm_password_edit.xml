<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="600dp">
    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout android:gravity="center_vertical" android:id="@+id/panelTitleBar" android:layout_width="match_parent" android:layout_height="@dimen/zm_pt_titlebar_height" xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:zm_leftButton="@+id/btnBack" xmlns:ns2="http://schemas.android.com/apk/res-auto" ns2:zm_rightButton="@+id/btnSave" xmlns:ns3="http://schemas.android.com/apk/res-auto" ns3:zm_title="@+id/txtTitle" style="@style/ZMTitleBar">
        <Button android:id="@+id/btnBack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@style/ZMBackButton"/>
        <Button android:id="@+id/btnSave" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="55dp" android:text="@string/zm_btn_save" style="@style/ZMButton.TitleBar"/>
        <us.zoom.androidlib.widget.ZMDynTextSizeTextView android:gravity="center_horizontal" android:id="@+id/txtTitle" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_lbl_password_change" style="@style/ZMTextView.Title"/>
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:paddingLeft="0dp" android:paddingRight="0dp" android:paddingBottom="@dimen/zm_setting_item_group_spacing" android:layout_width="match_parent" android:layout_height="wrap_content">
            <us.zoom.androidlib.widget.ZMSettingsCategory android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/zm_setting_item_group_spacing">
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:gravity="left|center_vertical|center_horizontal|center" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="132dp" android:text="@string/zm_lbl_password_old" style="@style/ZMTextView.SettingsItem.Small"/>
                    <EditText android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/edtOldPwd" android:paddingLeft="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/zm_hint_password_verify" android:maxLength="32" android:layout_weight="1" android:inputType="textPassword" style="@style/ZMEditText.SettingsItem.Small"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:gravity="left|center_vertical|center_horizontal|center" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="132dp" android:text="@string/zm_lbl_password_new" style="@style/ZMTextView.SettingsItem.Small"/>
                    <EditText android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/edtNewPwd" android:paddingLeft="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/zm_hint_password_set_new" android:maxLength="32" android:layout_weight="1" android:inputType="textPassword" style="@style/ZMEditText.SettingsItem.Small"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingRight="@dimen/zm_setting_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:gravity="left|center_vertical|center_horizontal|center" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="132dp" android:text="@string/zm_lbl_confirm" style="@style/ZMTextView.SettingsItem.Small"/>
                    <EditText android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/edtConfirmPwd" android:paddingLeft="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/zm_hint_retype_pwd" android:maxLength="32" android:layout_weight="1" android:inputType="textPassword" style="@style/ZMEditText.SettingsItem.Small"/>
                </LinearLayout>
            </us.zoom.androidlib.widget.ZMSettingsCategory>
            <TextView android:textColor="@color/zm_red" android:id="@+id/txtMessage" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:text="Error message here" style="@style/ZMTextView.Medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
