<?xml version="1.0" encoding="utf-8"?>
<us.zoom.androidlib.widget.ZMDialogRootLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/zm_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:layout_width="270dp" android:layout_height="0dp"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="100dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/btnPauseRecord" android:background="@drawable/zm_btn_record_control_bg_color" android:focusable="true" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:background="@null" android:focusable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/zm_btn_record_pause"/>
            <TextView android:textColor="@drawable/zm_btn_record_control_txt_color" android:id="@+id/txtPauseRecord" android:focusable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/zm_record_btn_pause" style="@style/ZMTextView.Small"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/btnResumeRecord" android:background="@drawable/zm_btn_record_control_bg_color" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:background="@null" android:focusable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/zm_btn_record_resume"/>
            <TextView android:textColor="@drawable/zm_btn_record_control_txt_color" android:id="@+id/txtResumeRecord" android:focusable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/zm_record_btn_resume" style="@style/ZMTextView.Small"/>
        </LinearLayout>
        <ImageView android:background="#10000000" android:layout_width="1dp" android:layout_height="match_parent"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/btnStopRecord" android:background="@drawable/zm_btn_record_control_bg_color" android:focusable="true" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:background="@null" android:focusable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/zm_btn_record_stop"/>
            <TextView android:textColor="@drawable/zm_btn_record_control_txt_color" android:id="@+id/txtResumeStop" android:focusable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/zm_record_btn_stop" style="@style/ZMTextView.Small"/>
        </LinearLayout>
    </LinearLayout>
</us.zoom.androidlib.widget.ZMDialogRootLayout>
