<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingBottom="10dp" android:focusable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="500dp">
    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout android:id="@+id/panelTitleBar" android:layout_width="match_parent" android:layout_height="@dimen/zm_pt_titlebar_height" xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:zm_leftButton="@+id/btnCancel" xmlns:ns2="http://schemas.android.com/apk/res-auto" ns2:zm_rightButton="@+id/viewRight" xmlns:ns3="http://schemas.android.com/apk/res-auto" ns3:zm_title="@+id/txtTitle" style="@style/ZMTitleBar">
        <Button android:id="@+id/btnCancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_btn_cancel" style="@style/ZMButton.TitleBar"/>
        <View android:id="@+id/viewRight" android:layout_width="0dp" android:layout_height="0dp"/>
        <us.zoom.androidlib.widget.ZMDynTextSizeTextView android:ellipsize="end" android:gravity="center" android:id="@+id/txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/zm_title_pair_room_system" android:singleLine="true" style="@style/ZMTextView.Title"/>
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>
    <ScrollView android:focusable="false" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="left" android:id="@+id/txtNote" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/zm_msg_pair_room_system_instructions" style="@style/ZMTextView.Instructions"/>
            <us.zoom.androidlib.widget.ZMSettingsCategory android:orientation="vertical" android:id="@+id/panelActions" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/panelMeetingNumber" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.zipow.videobox.view.ConfNumberAutoCompleteTextView android:gravity="center" android:id="@+id/edtMeetingNumber" android:paddingTop="17dp" android:paddingBottom="17dp" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="-7dp" android:layout_marginBottom="-7dp" android:hint="@string/zm_hint_meeting_number" android:maxLength="13" android:completionThreshold="1" android:imeOptions="actionUnspecified|actionNone|actionSend|actionNext|flagNoExtractUi" style="@style/ZMEditText.SettingsItem"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/panelPairingCode" android:paddingLeft="@dimen/zm_setting_item_padding_left" android:paddingRight="@dimen/zm_setting_item_padding_right" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:gravity="center" android:id="@+id/edtPairingCode" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:hint="@string/zm_hint_pairing_code" android:maxLength="5" android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ" android:inputType="text" android:imeOptions="actionUnspecified|actionGo|actionSend|actionDone|flagNoExtractUi" style="@style/ZMEditText.SettingsItem"/>
                </LinearLayout>
            </us.zoom.androidlib.widget.ZMSettingsCategory>
            <Button android:layout_gravity="center_horizontal" android:id="@+id/btnConnect" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="15dp" android:layout_marginRight="30dp" android:text="@string/zm_btn_pair_connect" style="@style/ZMButton.HappyPath"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
