        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/panelAddContact" android:background="@drawable/zm_settings_item_selector" android:paddingTop="@dimen/zm_setting_item_padding_top" android:paddingBottom="@dimen/zm_setting_item_padding_top" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/zm_lbl_add_contact" android:layout_weight="1" style="@style/ZMTextView.Medium"/>
